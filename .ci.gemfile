source 'https://rubygems.org'

gem 'rake'
gem 'sequel_polymorphic'
gem "minitest-global_expectations"

if RUBY_VERSION < '2.0'
  gem 'sequel', '< 5.72'
else
  gem 'sequel'
end

if RUBY_VERSION < '2.2'
  gem 'activerecord', '< 5'
elsif RUBY_VERSION < '2.3'
  gem 'activerecord', '< 5.2'
elsif RUBY_VERSION < '2.7'
  gem 'activemodel', '< 7'
  gem 'concurrent-ruby', '1.3.4'
else
  gem 'activerecord'
end

platforms :ruby do
  if RUBY_VERSION < '2.2'
    gem 'sqlite3', '< 1.4'
  elsif RUBY_VERSION < '2.5'
    gem 'sqlite3', '< 1.5.3'
  else
    gem 'sqlite3'
  end
end

platforms :jruby do
  gem 'jdbc-sqlite3'
end
